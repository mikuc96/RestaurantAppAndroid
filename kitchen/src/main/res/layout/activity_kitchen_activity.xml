<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.kitchen.Kitchen">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Hello World!" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/accept_order_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept This order"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/list_order_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list_order_element"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="58dp" />

    <Button
        android:id="@+id/conect_to_waiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="conect to waiter"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="-2dp" />

</android.support.constraint.ConstraintLayout>
